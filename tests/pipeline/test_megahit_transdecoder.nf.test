nextflow_pipeline {
    name "Test pipeline"
    script "../../main.nf"
    tag "test_megahit_transdecoder"
    tag "PIPELINE"

    test("Test MEGAHIT/transdecoder") {

        when {
            params {
                outdir = "$outputDir"
                input = 'https://raw.githubusercontent.com/nf-core/test-datasets/metatdenovo/samplesheet/samplesheet.csv'
                assembler      = 'megahit'
                orf_caller     = 'transdecoder'
                skip_eukulele  = true
                skip_eggnog    = true
                skip_kofamscan = true
            }
        }

        then {
            assertAll(
                { assert workflow.success },
                { assert new File("$outputDir/trimgalore/SAMPLE1_PE_1.fastq.gz_trimming_report.txt").exists() },
                { assert new File("$outputDir/trimgalore/fastqc/SAMPLE1_PE_1_val_1_fastqc.html").exists() },
                { assert new File("$outputDir/megahit/megahit_out/megahit_assembly.log").exists() },
                { assert new File("$outputDir/samtools/SAMPLE1_PE.sorted.bam.bai").exists() },
                { assert new File("$outputDir/bbmap/logs/SAMPLE1_PE.bbmap.log").exists() },
                { assert new File("$outputDir/featurecounts/SAMPLE1_PE.featureCounts.tsv.summary").exists() },
                { assert new File("$outputDir/transdecoder/megahit.transdecoder/megahit_assembly.contigs.fa.transdecoder.bed").exists() },
                { assert new File("$outputDir/transdecoder/megahit.transdecoder/megahit_assembly.contigs.fa.transdecoder.cds").exists() },
                { assert new File("$outputDir/transdecoder/megahit.transdecoder/megahit_assembly.contigs.fa.transdecoder.gff3").exists() },
                { assert new File("$outputDir/transdecoder/megahit.transdecoder/megahit_assembly.contigs.fa.transdecoder.pep").exists() },
                { assert new File("$outputDir/summary_tables/megahit.transdecoder.counts.tsv.gz").exists() },
                { assert new File("$outputDir/summary_tables/megahit.transdecoder.overall_stats.tsv.gz").exists() },
                { assert new File("$outputDir/multiqc/multiqc_report.html").exists() },
                { assert new File("$outputDir/pipeline_info/nf_core_metatdenovo_software_mqc_versions.yml").exists() }
            )
        }
    }
}
